<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benji.soundmanipulator.MainActivity">

    <Button
        android:id="@+id/play_sine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:layout_constraintHorizontal_bias="0.054"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/sine_freq_bar"
        android:layout_width="205dp"
        android:layout_height="23dp"
        android:max="2000"
        android:progress="440"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="472dp"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/stop_sine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/play_sine" />

    <Switch
        android:id="@+id/mixer_switch"
        android:layout_width="84dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:text="Mixer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="122dp" />

    <TextView
        android:id="@+id/freq_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:layout_marginLeft="126dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp" />

    <SeekBar
        android:id="@+id/volume_seek_bar"
        android:max="100"
        android:layout_width="204dp"
        android:layout_height="19dp"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@+id/sine_freq_bar"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/volume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="141dp"
        android:layout_marginLeft="126dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Switch
        android:id="@+id/wavetype_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wavetype  "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="126dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
