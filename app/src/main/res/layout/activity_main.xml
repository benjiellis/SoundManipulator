<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benji.soundmanipulator.MainActivity">

    <Button
        android:id="@+id/play_sine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:layout_constraintHorizontal_bias="0.054"
        android:layout_marginTop="8dp" />

    <Switch
        android:id="@+id/slow_switch"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:text="Slow Audio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/play_saw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.304"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.028" />

    <SeekBar
        android:id="@+id/sine_freq_bar"
        android:layout_width="205dp"
        android:layout_height="23dp"
        android:max="2000"
        android:progress="440"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="472dp" />

    <Button
        android:id="@+id/stop_sine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/play_sine" />

    <Button
        android:id="@+id/stop_saw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <SeekBar
        android:id="@+id/saw_seek_bar"
        android:layout_width="205dp"
        android:layout_height="23dp"
        android:layout_marginLeft="125dp"
        android:max="2000"
        android:progress="440"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/sine_freq_bar" />


</android.support.constraint.ConstraintLayout>
