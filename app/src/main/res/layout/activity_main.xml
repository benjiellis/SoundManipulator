<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benji.soundmanipulator.MainActivity">

    <SeekBar
        android:id="@+id/sine_freq_bar"
        android:layout_width="205dp"
        android:layout_height="23dp"
        android:layout_marginBottom="472dp"
        android:layout_marginLeft="124dp"
        android:max="2000"
        android:progress="440"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Switch
        android:id="@+id/mixer_switch"
        android:layout_width="84dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="468dp"
        android:text="Mixer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/freq_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:layout_marginLeft="126dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp" />

    <SeekBar
        android:id="@+id/volume_seek_bar"
        android:layout_width="206dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="468dp"
        android:max="100"
        app:layout_constraintStart_toEndOf="@+id/mixer_switch"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/volume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="488dp"
        android:text="Volume"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/wavetype_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="56dp"
        android:text="Wavetype  "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/osc_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Oscilator   "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/osc2_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Oscillator  "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/osc_switch" />

    <SeekBar
        android:id="@+id/osc2_freq_bar"
        android:layout_width="206dp"
        android:layout_height="20dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="64dp"
        android:max="2000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sine_freq_bar" />

    <Switch
        android:id="@+id/osc2_wavetype_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="60dp"
        android:text="Wavetype  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wavetype_switch" />

    <Switch
        android:id="@+id/fm_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="148dp"
        android:text="FM / Doubled  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
